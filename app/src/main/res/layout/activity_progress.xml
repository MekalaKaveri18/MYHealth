<!-- activity_progress.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <Button
        android:id="@+id/button10"
        android:layout_width="287dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:text="Button" />

    <TextView
        android:id="@+id/tv_stress_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stress Level:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_stress_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_stress_level"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="0"
        android:layout_below="@id/tv_stress_category"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_show_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Results"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

</RelativeLayout>


