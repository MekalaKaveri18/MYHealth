<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Example: Button to Start Chess Game -->
    <Button
        android:id="@+id/btn_start_chess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Chess Game"
        android:layout_centerInParent="true"
        android:onClick="startChessGame" />

    <!-- Example: Button to Play Video -->
    <Button
        android:id="@+id/btn_play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Video"
        android:layout_below="@id/btn_start_chess"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:onClick="playVideo" />

    <!-- Example: ImageView for Game/Video Thumbnail -->
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="105dp"
        android:layout_height="73dp"
        android:layout_below="@id/btn_play_video"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_5" />

    <!-- Example: TextView for Instructions or Description -->
    <TextView
        android:id="@+id/tv_instructions"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Instructions or Description"
        android:layout_below="@id/image_thumbnail"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Add more UI elements as needed -->

</RelativeLayout>
