<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="812dp"
    android:background="#003FC31B">

    <!-- Nested Box (Top Level) -->
    <FrameLayout
        android:layout_width="388dp"
        android:layout_height="642dp">

        <!-- Text: "MyHealth" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="92dp"
            android:text="MyHealth"
            android:textColor="#39B9F3"
            android:textSize="24sp" />

        <!-- Image: Battery, Wifi, Mobile Signal, Time -->
        <!-- These images would need to be replaced with appropriate resources -->


        <!-- Text: "Login as:" -->

        <!-- Input fields and buttons would typically be represented differently in XML -->
        <!-- For example, EditText and Button elements -->

        <!-- Text: "Create an account" and "Enter your email to sign up for this app" -->

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/button_background"
            android:text="Login as:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:layout_width="225dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/button_background"
            android:text="Create an account"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="290dp"
            android:text="Enter your email to sign up for this app"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Row with email input and "Sign up with email" button -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="348dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:hint="email@domain.com"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#828282"
                android:textSize="14sp" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/button_background"
                android:text="Sign up with email"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- "or continue with" text and divider -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:orientation="horizontal">




            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5"
                android:background="#e6e6e6" />
        </LinearLayout>

        <!-- "Google" sign-in button -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="420dp"
            android:background="#eeeeee">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_1" />

            <Button
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Text: "By clicking continue, you agree to our Terms of Service and Privacy Policy" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="480dp"
            android:text="By clicking continue, you agree to our Terms of Service and Privacy Policy"
            android:textAlignment="center"
            android:textColor="#828282"
            android:textSize="12sp" />

    </FrameLayout>
</FrameLayout>
